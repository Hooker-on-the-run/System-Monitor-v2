[Styles]
@include=#@#\styles.inc

; ----------------------------------
; MEASURES 
; ----------------------------------

[mString]
Measure=Plugin
Plugin=empty.dll
Type=sth

; ----------------------------------
; METERS display / overall style
; ----------------------------------

[meterHeader]
Meter=IMAGE
ImageName=#imgHead#
X=#HeadX#
Y=#HeadY#
H=#HeadH#
W=#HeadW#

[meterBody]
Meter=IMAGE
ImageName=#imgBody#
Tile=1
X=#BodyX#
Y=#BodyY#
H=(#CURRENTCONFIGHEIGHT# - 90)
W=#BodyW#
DynamicVariables=1

[meterTitle]
Meter=STRING
MeterStyle=styleTitle
X=#TitleX#
Y=#TitleY#
W=#TitleW#
H=#TitleH#
Text="disks"

; ----------------------------------
; Meters
; ----------------------------------


[MeterLabelCore1]
Meter=STRING
MeterStyle=styleLeftText
X=#LabelX#
Y=#TopLabelY#
W=#LabelW#
H=#LabelH#
Text="#disk1#\"
Scale=1000
Numofdecimals=1


[meterValueDisk1]
Meter=String
MeterStyle=styleRightText
MeasureName=measureUsedDisk1
MeasureName2=measureTotalDisk1
X=#LeftValueX#
Y=#ValueY#
W=#ValueW#
H=#ValueH#
Text="%1/%2B"
Numofdecimals=0
AutoScale=1




;---------------------------

